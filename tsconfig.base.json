{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["dom", "es2020", "es2021", "es2022", "esnext"],
    "target": "es2020",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@legion/components": ["dist/components"],
      "@legion/components-angular": ["dist/components-angular"],
      "@legion/components-react": ["dist/components-react"],
      "@legion/components/*": ["dist/components/*"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "references": [
    {
      "path": "./.storybook/tsconfig.json"
    }
  ]
}
